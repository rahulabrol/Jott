    </style>
    <!--endregion-->

    <!--region Checkbox-->
    <style name="Widget.App.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="ThemeOverlay.App.Checkbox.Primary" parent="Widget.App.Checkbox">
        <item name="buttonTint">@color/selector_app_framework_controls</item>
        <item name="android:textColor">?android:textColorPrimary</item>
