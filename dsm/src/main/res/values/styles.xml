<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="UnusedResources">
    <!--region Theme-->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--region Colors-->
        <!-- Primary brand. -->
        <item name="colorPrimary">@color/jott_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">?colorOnPrimaryHighEmphasis</item>
        <item name="colorOnPrimaryHighEmphasis">@color/white</item>
        <item name="colorOnPrimaryMediumEmphasis">@color/white_60</item>
        <!-- Secondary brand. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/base_gray</item>
        <item name="colorBackground">@color/base_gray</item>
        <item name="colorBackgroundSecondary">@color/light_blue</item>
        <item name="colorOnBackground">@color/darker_blue</item>
        <item name="colorOnBackgroundHighEmphasis">@color/darker_blue</item>
        <item name="colorOnBackgroundMediumEmphasis">@color/blue_gray</item>
        <!-- Surface -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">?colorOnSurfaceHighEmphasis</item>
        <item name="colorOnSurfaceHighEmphasis">@color/darker_blue</item>
        <item name="colorOnSurfaceMediumEmphasis">@color/blue_gray</item>
        <!-- Error -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <!-- Disabled -->
        <item name="colorDisabled">@color/darker_blue_38</item>
        <item name="colorOnDisabled">@color/white_38</item>
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        <!-- Color Control -->
        <item name="colorControlNormal">?colorOnSurfaceMediumEmphasis</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlHighlight">@color/ripple_material</item>
        <!-- Text -->
        <item name="android:textColorPrimary">?attr/colorOnBackgroundHighEmphasis</item>
        <item name="android:textColorSecondary">?attr/colorOnBackgroundHighEmphasis</item>
        <item name="android:textColorTertiary">?attr/colorOnBackgroundHighEmphasis</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- Edit text color-->
        <item name="editTextColor">?android:textColorPrimary</item>
        <item name="hintTextColor">@color/blue_gray</item>
        <item name="onHintTextColor">?android:textColorPrimaryInverse</item>
        <!-- Misc -->
        <item name="colorOutlineHighEmphasis">@color/gray</item>
        <item name="colorOutlineMediumEmphasis">@color/light_gray</item>
        <!--endregion-->
        <!--region Typography-->
        <item name="textAppearanceHeadline1">@style/App.TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/App.TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/App.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/App.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/App.TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/App.TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/App.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/App.TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/App.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/App.TextAppearance.Body2</item>
        <item name="textAppearanceBody3">@style/App.TextAppearance.Body3</item>
        <item name="textAppearanceBody4">@style/App.TextAppearance.Body4</item>
        <item name="textAppearanceButton">@style/App.TextAppearance.Button2</item>
        <item name="textAppearanceButton1">@style/App.TextAppearance.Button1</item>
        <item name="textAppearanceButton2">@style/App.TextAppearance.Button2</item>
        <item name="textAppearanceOverline">@style/App.TextAppearance.Overline</item>
        <item name="textAppearanceCaption">@style/App.TextAppearance.Body3</item>
        <item name="android:textAppearanceSmall">?textAppearanceBody2</item>
        <item name="android:textAppearanceMedium">?textAppearanceBody1</item>
        <!--endregion-->
        <!--region Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/App.ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/App.ShapeAppearance.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/App.ShapeAppearance.LargeComponent</item>
        <!--endregion-->
        <!--region Android Components Styles-->
        <item name="android:toolbarStyle">@style/ThemeOverlay.App.Toolbar.Primary</item>
        <item name="android:actionBarStyle">@style/ThemeOverlay.App.Toolbar.Primary</item>
        <item name="android:radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="android:autoCompleteTextViewStyle">
            @style/Widget.App.AutoCompleteTextView.FilledBox
        </item>
        <item name="materialAlertDialogTheme">@style/Widget.App.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/Widget.App.MaterialAlertDialog</item>
        <item name="android:datePickerDialogTheme">@style/Widget.App.MaterialAlertDialog</item>
        <item name="android:timePickerDialogTheme">@style/Widget.App.MaterialAlertDialog</item>
        <item name="listChoiceBackgroundIndicator">?selectableItemBackground</item>
        <!--endregion-->
    </style>

    <style name="Theme.App.Benefit">
